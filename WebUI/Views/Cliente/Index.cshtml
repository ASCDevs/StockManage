@model IEnumerable<Dominio.Cliente>

@{
    ViewBag.Title = "Clientes Cadastrados";
}
<div style="margin: 10px 0 10px 0;">
    @Html.ActionLink("Cadastrar Novo Cliente", "Cadastrar", new { area = "" }, new { @class = "btn btn-default" })
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cpf)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeCliente)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCliente)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.cpf }) |
                @Html.ActionLink("Detalhes", "Detalhes", new { id = item.cpf }) |
                @Html.ActionLink("Excluir", "Excluir", new { id = item.cpf })
            </td>
        </tr>
    }

</table>
